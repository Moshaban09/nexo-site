{
  "basicInfo": {
    "toolName": "NEXO CLI",
    "packageName": "create-nexo",
    "version": "1.1.4",
    "category": "CLI scaffolding tool",
    "primaryPurpose": "Scaffold and orchestrate modern frontend projects with extensible configurations",
    "detailedDescription": "NEXO is a next-generation, extensible CLI for scaffolding and orchestrating modern frontend projects. It supports multiple frameworks (React, with Next.js coming soon), advanced TypeScript/JavaScript variants, and a wide array of styling, UI, and state management options. It focuses on developer experience, performance, and flexibility.",
    "repository": "git+https://github.com/Moshaban09/create-nexo.git",
    "license": "MIT",
    "author": "Mohamed Shaban",
    "homepage": "https://nexo-site-ten.vercel.app/"
  },
  "techStack": {
    "coreFramework": "Node.js (CLI)",
    "buildTool": "esbuild (for CLI build), Vite (for scaffolded projects)",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "CSS Modules",
      "Sass/SCSS",
      "Plain CSS"
    ],
    "uiLibraries": [
      "shadcn/ui",
      "Radix UI",
      "Mantine",
      "HeroUI",
      "Ant Design",
      "Chakra UI"
    ],
    "dependencies": {
      "production": [
        "@clack/prompts",
        "chalk",
        "commander",
        "execa",
        "fs-extra",
        "ora",
        "picocolors"
      ],
      "development": [
        "esbuild",
        "eslint",
        "prettier",
        "typescript",
        "vitest"
      ]
    },
    "nodeVersion": ">=18.0.0",
    "packageManager": [
      "npm"
    ]
  },
  "features": {
    "features": [
      {
        "name": "Intelligent Directory Handling",
        "technical": "Detects if target directory is non-empty, scans package.json to infer previous configuration (framework, language, styling), and offers 'Continue' or 'Overwrite' options.",
        "userBenefit": "Prevents accidental data loss and speeds up re-initialization of existing projects.",
        "isUnique": true,
        "priority": "high"
      },
      {
        "name": "Lazy Loading Architecture",
        "technical": "Dynamically loads configurators only when selected, reducing startup time and memory footprint.",
        "userBenefit": "Faster CLI responsiveness.",
        "isUnique": true,
        "priority": "medium"
      },
      {
        "name": "Multi-Variant Support",
        "technical": "Supports TS/JS with SWC or React Compiler variants.",
        "userBenefit": "Flexibility to choose build performance vs standard setups.",
        "isUnique": false,
        "priority": "high"
      },
      {
        "name": "Dry Run Mode",
        "technical": "Simulates the entire creation process and generates a file tree preview without writing to disk.",
        "userBenefit": "Safe experimentation before scaffolding.",
        "isUnique": true,
        "priority": "medium"
      }
    ],
    "defaultConfiguration": "React + TypeScript + Tailwind CSS",
    "customizationOptions": "Framework, Language (TS/JS), Compiler (Standard/SWC/React Compiler), Styling, UI Library, State Management, Routing, Data Fetching, Icons, Project Structure",
    "scalability": "Designed for scalability with modular configurators and 'Feature-based' structure option.",
    "performance": {
      "buildTime": "~0.30s (CLI build)",
      "devServerStartup": "Instant (Vite projects)",
      "bundleSize": "~118KB (CLI bundle)"
    }
  },
  "cliCommands": {
    "installation": {
      "npm": "npm create nexo@latest",
      "yarn": "yarn create nexo",
      "pnpm": "pnpm create nexo",
      "global": "npm install -g create-nexo"
    },
    "mainCommand": "nexo",
    "commands": [
      {
        "command": "nexo create [name]",
        "description": "Create a new project",
        "flags": [
          {
            "flag": "--dir <directory>",
            "shorthand": "-d",
            "description": "Target directory",
            "options": [],
            "default": "."
          },
          {
            "flag": "--dry-run",
            "shorthand": null,
            "description": "Preview changes without creating files",
            "options": [],
            "default": "false"
          },
          {
            "flag": "--preset <preset>",
            "shorthand": null,
            "description": "Use a preset configuration",
            "options": [
              "saas",
              "dashboard",
              "landing",
              "minimal"
            ],
            "default": "null"
          },
          {
            "flag": "--parallel",
            "shorthand": null,
            "description": "Use parallel execution for faster setup",
            "options": [],
            "default": "false"
          }
        ],
        "examples": [
          "nexo create my-app",
          "nexo create my-app --dry-run",
          "nexo create my-saas --preset=saas"
        ]
      },
      {
        "command": "nexo generate <type> <name>",
        "description": "Generate a component, hook, page, or feature",
        "flags": [
           {
            "flag": "--js",
            "shorthand": null,
            "description": "Use JavaScript instead of TypeScript",
            "options": [],
            "default": "false"
           },
           {
             "flag": "--with-tests",
             "shorthand": null,
             "description": "Include test file",
             "options": [],
             "default": "false"
           }
        ],
        "examples": [
          "nexo generate component Button",
          "nexo generate hook useAuth",
          "nexo g feature Authentication"
        ]
      },
      {
        "command": "nexo wizard",
        "description": "Guided project creation for beginners",
        "flags": [],
        "examples": [
          "nexo wizard"
        ]
      },
      {
        "command": "nexo doctor",
        "description": "Check project health and dependencies",
        "flags": [],
        "examples": [
          "nexo doctor"
        ]
      }
    ],
    "interactivePrompts": [
      {
        "question": "Project name:",
        "type": "text",
        "options": [],
        "default": "my-nexo-app",
        "validation": "Alphanumeric, hyphens, underscores"
      },
      {
        "question": "Select a framework:",
        "type": "select",
        "options": ["React", "Next.js (Coming Soon)"],
        "default": "React",
        "validation": null
      },
      {
        "question": "Select a variant:",
        "type": "select",
        "options": ["TypeScript", "TypeScript + React Compiler", "TypeScript + SWC", "JavaScript", "JavaScript + React Compiler", "JavaScript + SWC"],
        "default": "TypeScript",
        "validation": null
      }
    ]
  },
